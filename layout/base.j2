<!doctype html>
<html lang="mk">
<head>
   <meta charset="utf8">
   {% block head %}{% endblock head %}
   <title>{% block title %}{{ resource.meta.title }}{% endblock %} | {{site_title}}</title>
   <link rel="stylesheet" href="{{ media_url('css/style.css') }}">
   <script src="http://api.html5media.info/1.1.5/html5media.min.js"></script>
   {# Le HTML5 shim, for IE6-8 support of HTML elements #}
   <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
   <![endif]-->
</head>
<body>
   <div class="outer">
      <div class="inner">
         {% block main %}
            {% filter markdown -%}
                {% mark article -%}{% block article -%}{%- endblock %}{%- endmark %}
            {%- endfilter %}
         {% endblock %}
      </div>

      <footer>
      {% block footer %}
      <p>Created by <a href="{{ author.url }}">{{ author.name }}</a></p>
      <p>Powered by <a href="https://github.com/hyde/hyde">hyde</a>.</p>
      {% endblock footer %}
      </footer>

   </div>
</body>
</html>
